<h2>Archiv</h2>
<% if @talks.empty? %>
  <div class="note">Noch keine archivierten Vortr√§ge</div>
<% end %>

<% @talks.group_by(&:semester).sort.reverse.each do |semester, talks| %>
  <h3><%= semester %></h3>

  <table>
    <% talks.each do |talk| %>
      <%= render talk %>
    <% end %>
  </table>
<% end %>
